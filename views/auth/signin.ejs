<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-md-5 mx-auto">
        <%- include('../partials/flash') %>
        <div class="card p-3 shadow-sm m-2">
    <h1 class="text-center">Sign In</h1>
    <p class="text-center">Welcome Back!</p>
    <form action="/signin" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username: </label>
            <input type="text" class="form-control" name="username" id="username"
            placeholder="Enter your Username" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password: </label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Create_a_password" required>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom btn-lg">Sign In</button>
        </div>
    </form>
    <p class="signin-text text-center">Don't have an account? <a href="/register">Sign Up</a></p>
</div>
</div>
</div>